<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xiu_item_selector">

    <RelativeLayout
        android:id="@+id/top_wrapper"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/more" />

        <TextView
            android:id="@+id/xiu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/xiu_lifo"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:text="持咒诵经"
            android:textColor="#ff313131"
            android:textSize="18sp" />

    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@id/top_wrapper"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffdddddd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <View
        android:id="@+id/dividerView"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffefeff4"/>

</RelativeLayout>
