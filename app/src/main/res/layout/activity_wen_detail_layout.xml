<?xml version="1.0" encoding="utf-8"?>

<com.baizhi.baseapp.widget.NavigationBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabHost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@android:id/tabs"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#ffB0E0E6"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sub1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wen_detail_introduction_message"
            android:textColor="@color/sub_tab_selector"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sub2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wen_detail_list_message"
            android:textColor="@color/sub_tab_selector"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/triangleLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/triangle" />

        <ImageView
            android:id="@+id/triangleRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/triangle" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#ff009dee" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tabContent2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@android:id/tabs" />

</com.baizhi.baseapp.widget.NavigationBarView>
