<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_dialog_bg"
    android:paddingBottom="60dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/xiu_cover"
            style="@style/cover_button_style"
            android:src="@drawable/cover_count"
            android:paddingBottom="60dp"
            />

        <ImageView
            android:id="@+id/cover_cancel"
            android:layout_below="@id/xiu_cover"
            style="@style/cover_button_style"
            android:src="@drawable/cover_ok"
            />
     </LinearLayout>

</RelativeLayout>
